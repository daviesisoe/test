{% extends 'admin.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block stylesheets %}

    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

{% endblock %}


{% block body %}
<div class="example-wrapper">
    <h1>testing display database</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>ID</th>
                <th>Question</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
        {% for question in posts %}
            <tr>
                <td> {{ question.id }}</td>
                <td><a href="{{ path('post.show', {id: question.id}) }}">
                        {{ question.question }}
                    </a>
                </td>
                <td>
                    <a href="{{ path('post.delete', {id: question.id}) }}" class="text-danger">remove</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>

    </table>

    <button class="btn btn-info"  onclick='window.location.href="{{ path('post.create') }}"'>Add Question</button>
</div>
{% endblock %}

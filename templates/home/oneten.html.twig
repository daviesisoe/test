{% extends('user.html.twig') %}

{% block title %}One-Ten Questions{% endblock %}

{% block body %}

    <div class="jumbotron jumbotron-fluid bg-warning text-center">
        <div class="container">
            <h1>Welcome to the One to Ten Options</h1>
            <h3>Answer as truthfully as possible</h3>
        </div>
    </div>

    <div class="container-fluid">
        <table class="table table-striped table-responsive">
            <thead>
            <tr>
                <th>No</th>
                <th>Question</th>
                
            </tr>
            </thead>

            <tbody>
            {% for question in posts %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ question.question }} ?</td>
                </tr>
		<tr>
			<td></td>
			<td>
                        <form >
			    <div class="form-check-inline">
			      <label class="form-check-label" for="radio1">
				<input type="radio" class="form-check-input" id="radio1" name="yes" value="1">1
			      </label>
			    </div>
			    <div class="form-check-inline">
			      <label class="form-check-label" for="radio2">
				<input type="radio" class="form-check-input" id="radio2" name="no" value="1">2
			      </label>
			    </div>
				<div class="form-check-inline">
			      <label class="form-check-label" for="radio3">
				<input type="radio" class="form-check-input" id="radio3" name="no" value="1">3
			      </label>
			    </div>
				<div class="form-check-inline">
			      <label class="form-check-label" for="radio4">
				<input type="radio" class="form-check-input" id="radio4" name="no" value="1">4
			      </label>
			    </div>
				<div class="form-check-inline">
			      <label class="form-check-label" for="radio5">
				<input type="radio" class="form-check-input" id="radio5" name="no" value="1">5
			      </label>
			    </div>
				<div class="form-check-inline">
			      <label class="form-check-label" for="radio6">
				<input type="radio" class="form-check-input" id="radio6" name="no" value="1">6
			      </label>
			    </div>
				<div class="form-check-inline">
			      <label class="form-check-label" for="radio7">
				<input type="radio" class="form-check-input" id="radio7" name="no" value="1">7
			      </label>
			    </div>
				<div class="form-check-inline">
			      <label class="form-check-label" for="radio8">
				<input type="radio" class="form-check-input" id="radio8" name="no" value="1">8
			      </label>
			    </div>
				<div class="form-check-inline">
			      <label class="form-check-label" for="radio9">
				<input type="radio" class="form-check-input" id="radio9" name="no" value="1">9
			      </label>
			    </div>
				<div class="form-check-inline">
			      <label class="form-check-label" for="radio10">
				<input type="radio" class="form-check-input" id="radio10" name="no" value="1">10
			      </label>
			    </div>
			    
			    <button type="submit" class="btn btn-primary">Submit</button>
			  </form>
			</td>
		</tr>
            {% endfor %}
            </tbody>

        </table>
    </div>

{% endblock %}




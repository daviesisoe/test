{% extends('user.html.twig') %}

{% block title %}Yes-No Questions{% endblock %}

{% block body %}

    <div class="jumbotron jumbotron-fluid bg-success text-center">
        <div class="container">
            <h1>Welcome to the Yes or No Section</h1>
            <h3>Answer as truthfully as possible</h3>
        </div>
    </div>

    <div class="container-fluid">
        <table class="table table-striped table-responsive">
            <thead>
            <tr>
                <th>No</th>
                <th>Question</th>
                <th>Answer</th>
            </tr>
            </thead>

            <tbody>
            {% for question in posts %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ question.question }} ?</td>
                    <td>
                        <form >
			    <div class="form-check-inline">
			      <label class="form-check-label" for="radio1">
				<input type="radio" class="form-check-input" id="radio1" name="yes" value="1">Yes
			      </label>
			    </div>
			    <div class="form-check-inline">
			      <label class="form-check-label" for="radio2">
				<input type="radio" class="form-check-input" id="radio2" name="no" value="1">No
			      </label>
			    </div>
			    
			    <button type="submit" class="btn btn-primary">Submit</button>
			  </form>
			</td>
                </tr>
            {% endfor %}
            </tbody>

        </table>
    </div>

{% endblock %}




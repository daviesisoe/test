{% extends('user.html.twig') %}

{% block title %}Questionnaire Questions{% endblock %}



{% block body %}

    <div class="jumbotron jumbotron-fluid bg-info text-center">
        <div class="container">
            <h1>Welcome to the questionnaire</h1>
            <h3>Answer as truthfully as possible</h3>
        </div>
    </div>
    <div class="container-fluid">
        <table class="table table-striped table-responsive">
            <thead>
            <tr>
                <th>No</th>
                <th>Question</th>
                <th>Answer</th>
            </tr>
            </thead>

            <tbody>
            {% for question in posts %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ question.question }} ?</td>
                    <td>
                        <form class="form-inline" method="post" action="{{ path('post_answer', {'id': question.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="text" class="form-control" placeholder="Enter Answer" name="reply">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>


                    </td>
                </tr>
            {% endfor %}
            </tbody>

        </table>
    </div>
{% endblock %}

